\begin_inset Formula 
\[
|\mathcal{E}|\leq\underset{m=1}{\overset{M}{\sum}}\frac{|A^{m}|(|A^{m}|-1)}{2}\leq\underset{m=1}{\overset{M}{\sum}}\frac{(\delta+S_{m})(\delta+S_{m}-1)}{2}.
\]

\end_inset


\end_layout

\begin_layout Proof
Por ser las variables 
\begin_inset Formula $X_{i}$
\end_inset

 i.i.d.
 y uniformes, tenemos
\begin_inset Formula 
\[
P(S_{1}=x_{1},\, S_{2}=x_{2},\,...,\, S_{M}=x_{M})=\begin{cases}
\frac{n!}{x_{1}!x_{2}!...x_{M}!}(\frac{1}{M})^{n}, & \underset{k=1}{\overset{M}{\sum}}x_{k}=n\\
0, & otherwise
\end{cases},
\]

\end_inset


\end_layout

\begin_layout Proof
i.e., el vector 
\begin_inset Formula $(S_{1},\, S_{2},\,...,S_{M})$
\end_inset

 tiene distribución multinomial.
 Entonces, tenemos
\begin_inset Formula 
\[
\mathsf{E}[S_{m}]=\frac{n}{M}=\delta,\quad\mathsf{Var}[S_{m}]=\frac{n}{M}\big(1-\frac{1}{M}\big)=\delta\big(1-\frac{1}{M}\big),\quad E[S_{m}^{2}]=\delta\big(1-\frac{1}{M}\big)+\delta^{2}
\]

\end_inset


\end_layout

\begin_layout Proof
